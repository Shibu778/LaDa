BASEDIR="/home/davezac/usr/"

bsuf="-gcc43-mt"
BOOST_LDFLAGS="-L$BASEDIR/lib"
BOOST_MPI="-lboost_mpi$bsuf"
BOOST_SERIALIZATION="-lboost_serialization$bsuf"
BOOST_PROGOP="-lboost_program_options$bsuf"
