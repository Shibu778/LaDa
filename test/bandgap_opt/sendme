#! /bin/tcsh
#
#PBS -l nodes=4:ppn=2,walltime=00:40:0
#PBS -q Test
#PBS -m n 
#PBS -e err
#PBS -o out
module load openmpi fftw arpack pgi


cd  $PBS_O_WORKDIR/calc
