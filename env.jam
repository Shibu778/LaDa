import os ;
local HOME = [ os.environ HOME ] ;

lib tinyxml : : <name>tinyxml <search>$(HOME)/usr/lib : : <include>$(HOME)/usr/include ;

boostinclude = $(HOME)/usr/include/boost-1_35 ;

use-project boost
  : $(HOME)/usr/src//boost_1_35_0/ ;

alias boost-pg : : : <library>/boost/program_options <include>/boost/program_options ;
alias boost-mpi : : : <library>/boost/mpi <include>/boost/mpi ;
alias boost-ser : : : <library>/boost/serialization <include>/boost/serialization ;


