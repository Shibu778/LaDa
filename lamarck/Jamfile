
lib ce : cluster.cc constituent_strain.cc functional_builder.cc
         harmonic.cc  polynome.cc 
         ../print//print.lib 
         ../atat//atat.lib 
         ../mpi//mpi.lib
         ..//tinyxml 
         crystal ;

lib crystal :  lattice.cc structure.cc
               ../print//print.lib 
               ../atat//atat.lib 
               ../mpi//mpi.lib 
               ..//tinyxml ;

alias lamarck.lib : ce crystal ;

exe lamarck : main.cc lamarck.lib $(TOP)//boost-pg ;

python-extension atom : atom.py.cc  $(TOP)/atat//atatpy $(TOP)//tinyxml
                      : : <library>..//boost-python ;

# A little "rule" (function) to clean up the syntax of declaring tests
# of these extension modules.
local rule run-test ( test-name : sources + )
{
    import testing ;
    testing.make-test run-pyd : $(sources) : : $(test-name) ;
}

# Declare test targets
# run-test lamarck_test : atom lamarck_test.py
#                         $(TOP)/atat//atatpy $(TOP)//tinyxml ;


